<a href="{{ section.settings.link }}" target="_blank" style="text-align: center; display:block;">
  <h1>{{ section.settings.name }}</h1>
  <img src="{{ section.settings.logo | img_url: 'medium' }}" alt="">
</a>

{% for block in section.blocks %}

  {% if block.type == 'my_type_1' %}
    <div style="background-color: {{ block.settings.line_color }};">
      &nbsp;
    </div>
  {% endif %}

{% endfor %}


{% schema %}
{
  "name": "会社名（成果物3）",
  "settings": [
    {
      "type": "text",
      "id": "name",
      "label": "会社名",
      "default": "ユニティ・ソフト株式会社"
    },
    {
      "type": "image_picker",
       "id": "logo",
       "label": "会社のロゴを選ぶ"
    },
    {
      "type": "url",
      "id": "link",
      "label": "会社のURL"
    }

  ],
  "blocks": [
    {
       "name": "ラインカラー",
       "type": "my_type_1",
       "settings": [
         {
           "type": "color",
           "id": "line_color",
           "label": "ラインカラー"
         }
       ]
     }
  ],
  "presets":[
    {
      "name":"会社名（成果物3）"
    }
  ]
}
{% endschema %}
